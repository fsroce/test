{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "types": ["node"]
  },
  "include": [
    "generator.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "output",
    "test-images"
  ]
}
